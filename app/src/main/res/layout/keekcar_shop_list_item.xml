<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/keepcar_shop_img"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:padding="3dp"
            fresco:placeholderImage="@drawable/timg"
        />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/keepcar_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:padding="3dp"
                android:text="某某4S经销店"
                android:textColor="#0B0B0B"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/keepcar_shop_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_margin="2dp"
                    android:src="@mipmap/score_img" />

                <ImageView
                    android:id="@+id/img_2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_margin="2dp"
                    android:src="@mipmap/score_img" />

                <ImageView
                    android:id="@+id/img_3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_margin="2dp"
                    android:src="@mipmap/score_img" />

                <ImageView
                    android:id="@+id/img_4"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_margin="2dp"
                    android:src="@mipmap/score_img" />

                <ImageView
                    android:id="@+id/img_5"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_margin="2dp"
                    android:src="@mipmap/score_img" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="5.0"
                    android:textColor="#F6BA09"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/keepcar_shop_adderss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:paddingLeft="3dp"
                android:paddingTop="5dp"
                android:text="西安市碑林区和平门115号1楼"
                android:textColor="#7B7B7B"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/keepcar_shop_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:gravity="right"
                    android:paddingTop="5dp"
                    android:text="1.2Km"
                    android:textColor="#BE103E"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/keepcar_shop_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="18dp"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:lines="1"
                    android:text="0人购买 1人评价"
                    android:textColor="#999"
                    android:textSize="10dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/keepcar_shop_location"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@mipmap/location" />

                <ImageView
                    android:id="@+id/keepcar_shop_call"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/tel" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/keepcar_shop_title1_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/dian" />

        <TextView
            android:id="@+id/keepcar_shop_title1_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:text="进店就有大礼包"
            android:textColor="#BE103E"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/keepcar_shop_title2_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/xin" />

        <TextView
            android:id="@+id/keepcar_shop_title2_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:text="购车享1000元直补"
            android:textColor="#29862F"
            android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>